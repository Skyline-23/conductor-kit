{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Conductor Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timeout_ms": { "type": "integer", "minimum": 0 },
        "idle_timeout_ms": { "type": "integer", "minimum": 0 },
        "max_parallel": { "type": "integer", "minimum": 0 },
        "retry": { "type": "integer", "minimum": 0 },
        "retry_backoff_ms": { "type": "integer", "minimum": 0 },
        "log_prompt": { "type": "boolean" },
        "summary_only": { "type": "boolean" }
      }
    },
    "routing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string", "enum": ["manual", "router", "all", "always"] },
        "router_role": { "type": "string" },
        "always": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "daemon": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer", "minimum": 0 },
        "max_parallel": { "type": "integer", "minimum": 0 },
        "queue": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "on_mode_change": {
              "type": "string",
              "enum": ["none", "cancel_pending", "cancel_running"]
            }
          }
        },
        "approval": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "required": { "type": "boolean" },
            "roles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "agents": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "roles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "cli": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          },
          "ready_cmd": { "type": "string" },
          "ready_args": {
            "type": "array",
            "items": { "type": "string" }
          },
          "ready_timeout_ms": { "type": "integer", "minimum": 0 },
          "model_flag": { "type": "string" },
          "model": { "type": "string" },
          "models": {
            "type": "array",
            "items": {
              "anyOf": [
                { "type": "string" },
                {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "name": { "type": "string" },
                    "reasoning_effort": { "type": "string" },
                    "reasoning": { "type": "string" }
                  }
                }
              ]
            }
          },
          "reasoning_flag": { "type": "string" },
          "reasoning_key": { "type": "string" },
          "reasoning": { "type": "string" },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "cwd": { "type": "string" },
          "timeout_ms": { "type": "integer", "minimum": 0 },
          "idle_timeout_ms": { "type": "integer", "minimum": 0 },
          "max_parallel": { "type": "integer", "minimum": 0 },
          "retry": { "type": "integer", "minimum": 0 },
          "retry_backoff_ms": { "type": "integer", "minimum": 0 }
        },
        "required": ["cli"]
      }
    }
  },
  "required": ["roles"]
}
