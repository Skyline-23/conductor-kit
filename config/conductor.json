{
  "defaults": {
    "timeout_ms": 120000,
    "max_parallel": 4,
    "retry": 0,
    "retry_backoff_ms": 500,
    "log_prompt": false
  },
  "routing": {
    "strategy": "oracle",
    "router_role": "oracle",
    "always": ["oracle"],
    "hints": {
      "librarian": ["read", "open", "file", "path", "repo", "repository", "codebase", "source"],
      "explore": ["search", "research", "compare", "survey", "scan", "find", "discover", "options"],
      "frontend-ui-ux-engineer": ["design", "frontend", "css", "layout", "component"],
      "document-writer": ["doc", "docs", "documentation", "readme", "guide", "manual", "changelog", "release notes"],
      "multimodal-looker": ["image", "images", "screenshot", "photo", "diagram", "mockup"]
    }
  },
  "daemon": {
    "host": "127.0.0.1",
    "port": 51842,
    "max_parallel": 4,
    "queue": {
      "on_mode_change": "none"
    },
    "approval": {
      "required": false,
      "roles": [],
      "agents": []
    }
  },
  "roles": {
    "oracle": {
      "cli": "codex",
      "model": "gpt-5.2-codex",
      "reasoning": "medium"
    },
    "librarian": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "explore": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "frontend-ui-ux-engineer": {
      "cli": "gemini",
      "model": "gemini-3-pro-preview"
    },
    "document-writer": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "multimodal-looker": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    }
  }
}
