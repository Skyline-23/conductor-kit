{
  "defaults": {
    "timeout_ms": 120000,
    "max_parallel": 4,
    "retry": 0,
    "retry_backoff_ms": 500,
    "log_prompt": false
  },
  "daemon": {
    "host": "127.0.0.1",
    "port": 51842,
    "max_parallel": 4,
    "queue": {
      "on_mode_change": "none"
    },
    "approval": {
      "required": false,
      "roles": [],
      "agents": []
    }
  },
  "roles": {
    "oracle": {
      "cli": "codex",
      "args": ["exec", "{prompt}"],
      "model_flag": "-m",
      "model": "",
      "models": [],
      "reasoning_flag": "-c",
      "reasoning_key": "model_reasoning_effort",
      "reasoning": ""
    },
    "librarian": {
      "cli": "claude",
      "args": ["-p", "{prompt}"],
      "model_flag": "--model",
      "model": "",
      "models": []
    },
    "explore": {
      "cli": "codex",
      "args": ["exec", "{prompt}"],
      "model_flag": "-m",
      "model": "",
      "models": [],
      "reasoning_flag": "-c",
      "reasoning_key": "model_reasoning_effort",
      "reasoning": ""
    },
    "frontend-ui-ux-engineer": {
      "cli": "gemini",
      "args": ["{prompt}"],
      "model_flag": "--model",
      "model": "",
      "models": []
    },
    "document-writer": {
      "cli": "claude",
      "args": ["-p", "{prompt}"],
      "model_flag": "--model",
      "model": "",
      "models": []
    },
    "multimodal-looker": {
      "cli": "gemini",
      "args": ["{prompt}"],
      "model_flag": "--model",
      "model": "",
      "models": []
    }
  }
}
