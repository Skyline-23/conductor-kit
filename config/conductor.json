      "cli": "codex",
      "model": "gpt-5.2-codex",
      "reasoning": "medium"
    },
    "librarian": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "explore": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "frontend-ui-ux-engineer": {
      "cli": "gemini",
      "model": "gemini-3-pro-preview"
    },
    "document-writer": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    },
    "multimodal-looker": {
      "cli": "gemini",
      "model": "gemini-3-flash-preview"
    }
  }
